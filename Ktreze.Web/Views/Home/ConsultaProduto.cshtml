@model IEnumerable<Ktreze.Web.Models.ProdutoModel>

@{
    ViewBag.Title = "ConsultaProduto";
}

<h2>ConsultaProduto</h2>

<p>
    @Html.ActionLink("Novo Produto", "CadastroProduto", "", new { @class = "btn btn-success btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecoVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecoCompra)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecoVenda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecoCompra)
        </td>
        <td>
            @Html.ActionLink("Editar", "ViewEdita", new { id=item.Id }, new { @class = "btn btn-primary btn-xs" }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Deletar", "DeletarProduto", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
